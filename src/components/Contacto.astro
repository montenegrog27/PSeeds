<section id="contacto" class="bg-customBackGround text-white py-16 px-5 md:px-0">
    <!-- Título centrado -->
    <div class="text-center mb-12 flex-col flex justify-center items-center gap-10">
      <h2 class="text-white text-4xl font-bold">Contacto</h2>
      <p class="font-normal text-white">Comuníquese con nosotros por cualquier duda o consulta</p>
    </div>
  
    <!-- Contenedor de las cards -->
  <div class="container mx-auto flex justify-center mb-5 ">
    <div class="flex flex-col justify-center items-center w-[90%] md:w-[40%]">
      <div class="border border-gray-150 bg-transparent text-gray-100 rounded-[45px] py-6 w-full flex flex-col items-center " style="background-image: url('https://res.cloudinary.com/dsbrnqc5z/image/upload/v1727390895/images/Frame49_stujar.jpg'); background-size: cover; background-position: center;">
        <div class="mb-6 rounded-full bg-yellow-100 flex justify-start items-center px-2 py-1">
          <i class="fab fa-whatsapp text-black text-4xl"></i> 
        </div>
        <p class="text-lg font-semibold mb-4">3795389253</p>
        <div id="linea" class="bg-gray-100 h-0.5 w-full mb-4"></div> <!-- Línea -->
        <a href="https://wa.me/3795389253" class="bg-customYellow text-black font-bold py-2 px-4 rounded hover:bg-yellow-600 transition duration-200">Contactar</a> <!-- Botón -->
      </div>
    </div>
  </div>
  
  
    <div class="text-center mb-12 flex-col flex justify-center items-center gap-10">
      <p class="font-normal text-white">O deje su mensaje y lo contactaremos a la brevedad</p>
      
      <!-- Formulario de contacto con fondo transparente -->
  <form class="bg-transparent rounded-3xl w-full max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-4 p-6">
    <div class="flex flex-col">
      <input type="email" placeholder="Email" class="border bg-transparent border-customYellow rounded w-full p-2 mb-4 placeholder-white" required>
      <input type="tel" placeholder="Celular" class="border bg-transparent border-customYellow rounded w-full p-2 placeholder-white" required>
    </div>
    <div class="flex flex-col gap-5">
      <textarea placeholder="Escribir su mensaje" class="border bg-transparent border-customYellow rounded w-full p-2 h-full placeholder-white" rows="4" required></textarea>
      <div class="flex justify-end items-center mr-10">
        <button type="submit" class="bg-customYellow text-black font-bold py-2 px-4 rounded hover:bg-yellow-600 transition duration-200">Enviar</button>
      </div>
    </div>
  </form>
  
    </div>
  </section>
  